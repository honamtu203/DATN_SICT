<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.qltc.finace.view.activity.home.HomeActivityViewModel" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp10"
    android:paddingVertical="@dimen/dp5"
    android:background="@drawable/bg_border_top_right"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dp5"
        android:background="@drawable/ic_logo_wallet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="@dimen/sp20"
        android:autoSizeMinTextSize="@dimen/sp12"
        android:autoSizeStepGranularity="1sp"
        android:maxLines="2"
        android:layout_marginStart="@dimen/dp5"
        android:layout_gravity="start|center"
        android:text="@{viewModel.userName}"
        android:textColor="@color/black80"
        android:textStyle="bold"
        />
</LinearLayout>
</layout>